{
  "name": "visual-zk",
  "private": true,
  "version": "1.0.0",
  "main": "./dist/main/main.js",
  "scripts": {
    "start": "concurrently.cmd \"yarn start:main\" \"yarn start:renderer\"",
    "start:main": "electron-webpack dev",
    "start:renderer": "cross-env BROWSER=none APP_ROOT=src/renderer PORT=6008 umi dev",
    "build-main-prod": "cross-env NODE_ENV=production webpack --config ./build/webpack.main.prod.config.js",
    "build-main-dev": "cross-env NODE_ENV=development webpack --config ./build/webpack.main.config.js",
    "build:renderer": "cross-env APP_ROOT=src/renderer umi build",
    "pack": "npm run build:renderer && npm run build-main-prod && electron-builder --dir",
    "dist": "electron-builder",
    "dist-mac": "electron-builder -m",
    "dist-win": "electron-builder -w"
  },
  "build": {
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "mac": {
      "category": "your.app.category.type"
    },
    "directories": {
      "output": "release"
    },
    "appId": "com.ghostg00.visual-zk",
    "asar": false,
    "win": {
      "icon": "favicon.ico"
    }
  },
  "dependencies": {
    "antd": "^3.22.2",
    "dva": "^2.4.1",
    "moment": "^2.24.0",
    "nedb": "^1.8.0",
    "node-zookeeper-client": "0.2.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-split-pane": "^0.1.87",
    "zookeeper-cluster-client": "^3.1.0"
  },
  "devDependencies": {
    "@types/nedb": "^1.8.9",
    "@types/node-zookeeper-client": "^0.2.6",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^10.0.3",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.1",
    "electron": "^4.0.5",
    "electron-builder": "^20.38.5",
    "electron-debug": "^2.0.0",
    "electron-webpack": "^2.6.2",
    "electron-webpack-ts": "^3.1.1",
    "umi": "^2.9.0",
    "umi-plugin-react": "^1.9.19",
    "umi-types": "^0.3.17",
    "webpack": "4.28.0",
    "webpack-cli": "^3.2.1",
    "webpack-merge": "^4.2.1"
  },
  "electronWebpack": {
    "main": {
      "sourceDirectory": "src/main"
    },
    "renderer": {
      "sourceDirectory": null
    }
  }
}
